<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:combobox="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             x:Class="MultiStepForm.AccommodationView">

    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Hotel Selection" Padding="10"/>
            <!-- Hotel selection -->
            <combobox:SfComboBox x:Name="HotelPicker" Placeholder="Choose partner hotel" />
            <Label x:Name="HotelError" Style="{StaticResource ErrorLabelStyle}" IsVisible="False"/>

            <Label Text="Room Type" Padding="10"/>
            <!-- Room type selection -->
            <combobox:SfComboBox x:Name="RoomTypePicker" Placeholder="Select room type" />
            <Label x:Name="RoomTypeError" Style="{StaticResource ErrorLabelStyle}" IsVisible="False"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Padding="10">
                <VerticalStackLayout>
                    <Label Text="Check-in"/>
                    <!-- Check-in date -->
                    <DatePicker x:Name="CheckInPicker" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1">
                    <Label Text="Check-out"/>
                    <!-- Check-out date -->
                    <DatePicker x:Name="CheckOutPicker" />
                </VerticalStackLayout>
            </Grid>

            <!-- Special accommodation requests -->
            <inputLayout:SfTextInputLayout x:Name="Requests"
                                     Hint="Special Requests" 
                                     HelperText="Late check-in, extra bed, etc"
                                     Style="{StaticResource TextStyle}">
                <Entry x:Name="SpecialReqEntry" />
            </inputLayout:SfTextInputLayout>

            <!-- Transportation -->
            <Label Text="Transportation Options" Padding="10"/>
            <StackLayout>
                <buttons:SfCheckBox x:Name="airportPickup" Text="Airport pickup"/>
                <buttons:SfCheckBox x:Name="shuttle" Text="Shuttle service"/>
            </StackLayout>

            <HorizontalStackLayout Spacing="12" Margin="0,8,0,0">
                <Button x:Name="BtnBackToEvent" Text="Back" />
                <Button x:Name="BtnAccommodationNext" Text="Next" TextColor="White"
                        BackgroundColor="{StaticResource PrimaryColor}"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentView>
